<h1>New reservation</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <%= render "shared/calendar", theaters: @theaters, start_time: @reservation.start_time, end_time: @reservation.end_time, theater_id: @reservation.theater_id  %>
    </div>
    <div class="col">
      <p>Start Time: <%= @reservation.start_time.strftime("%B %e, %Y at %l:%M %p") if @reservation.start_time %></p>
      <p>End Time: <%= @reservation.end_time.strftime("%B %e, %Y at %l:%M %p") if @reservation.end_time %></p>
    </div>
  </div>
</div>




<%= render "form", reservation: @reservation %>

<br>

<div>
  <%= link_to "Back to reservations", reservations_path %>
</div>
