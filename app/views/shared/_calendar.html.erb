<div class="table-container">
  <table class="table-calendar">
    <thead>
      <tr>
        <th scope="col">Time</th>
        <% @theaters.each do |theater| %>
          <th scope="col">Theater <%= theater.id %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% (10..23).each do |hour| %>
        <% (0..3).each do |quarter| %>
          <% time = Time.current.change(hour: hour, min: quarter * 15) %>
          <% next_time = time + 15.minutes %>
          <tr>
            <th scope="row">
              <% display_hour = hour < 12 ? hour : (hour - 12) %>
              <%= display_hour == 0 ? 12 : display_hour %>:<%= format('%02d', quarter * 15) %> <%= hour < 12 ? 'AM' : 'PM' %>
              -
              <% next_time = time + 15.minutes %>
              <% display_next_hour = next_time.hour < 12 ? next_time.hour : (next_time.hour - 12) %>
              <%= display_next_hour == 0 ? 12 : display_next_hour %>:<%= format('%02d', next_time.min) %> <%= next_time.hour < 12 ? 'AM' : 'PM' %>
            </th>
            <% @theaters.each do |theater| %>
              <% reservations = theater.reservations_for_date(Date.today) %>
              <% overlaps_with_reservation = reservations.any? { |r| r.overlaps_with_interval?(hour, quarter) } %>
              <%# td_class = overlaps_with_reservation ? 'reserved-cell' : '' %>
              <%# td_class = 'reserved-cell' if time < Time.current %>
              <% td_class = ' selected-time' if theater.id == theater_id && @reservation.selected_start_time?(hour, quarter) %>
              <% td_class = ' selected-time' if theater.id == theater_id && end_time && @reservation.selected_end_time?(hour, quarter)%>
              <%# td_class += ' selected-time' if theater.id == theater_id && start_time && end_time && @reservation.overlaps_with_interval?(hour, quarter) %>
              <td class="<%= td_class %>">
                <% if !overlaps_with_reservation && !(time < Time.current) %>
                  <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                    <% if !start_time %>
                      <%= link_to new_reservation_path(start_time: "#{hour}:#{quarter * 15}", theater_id: theater.id) do %>
                        <button type="button" class="btn btn-outline-primary" style="--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;">
                          Available
                        </button>
                      <% end %>
                    <% else %>
                      <% end_time_hour = hour %>
                      <% end_time_quarter = quarter + 1 %>
                      <% end_time_hour += 1 if end_time_quarter == 4 %>
                      <% end_time_quarter = 0 if end_time_quarter == 4%>
                      <% if theater.id != theater_id %>
                        <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                          <button type="button" class="btn btn-outline-secondary" style="--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;" disabled>
                            Available
                          </button>
                        </div>
                      <% else %>
                        <!-- Start Time Selected, The cell is before the current time (I AM NOT SURE THIS WORKS) -->
                        <% if start_time > time %>
                          <button type="button" class="btn btn-outline-secondary" style="--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;" disabled>
                            Available
                          </button>
                        <% end %>

                        <!-- Start Time Selected, The Cell is the Start Time -->
                        <% if @reservation.selected_start_time?(hour, quarter) %>
                          <%= link_to new_reservation_path(start_time: start_time, theater_id: theater_id, end_time: "#{end_time_hour}:#{end_time_quarter * 15}") do %>
                            <button type="button" class="btn btn-primary" style="--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;">
                              Select End Time
                            </button>
                          <% end %>
                        <% end %>

                        <!-- Start Time Selected, The cell is after the start_time -->
                        <% if Time.new(Date.today.year, Date.today.month, Date.today.day, hour, quarter * 15) > start_time %>
                          <%= link_to new_reservation_path(start_time: start_time, theater_id: theater_id, end_time: "#{end_time_hour}:#{end_time_quarter * 15}") do %>
                            <button type="button" class="btn btn-outline-primary" style="--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;">
                              Select End Time
                            </button>
                          <% end %>
                        <% end %>

                        <!-- Start Time Selected, The cell is after the start_time -->
                        






                      <% end %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                    <button type="button" class="btn btn-outline-secondary" style="--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;" disabled>
                      Unavailable
                    </button>
                    <%= Time.new(Date.today.year, Date.today.month, Date.today.day, hour, quarter * 15) %>
                  </div>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
