<div id="<%= dom_id reservation %>">
  <p>
    <strong>User:</strong>
    <%= reservation.user_id %>
  </p>

  <p>
    <strong>Theater:</strong>
    <%= reservation.theater_id %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= reservation.status %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= reservation.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= reservation.end_time %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= reservation.duration %>
  </p>

  <p>
    <strong>Number guests:</strong>
    <%= reservation.number_guests %>
  </p>

  <p>
    <strong>Content choice:</strong>
    <%= reservation.content_choice %>
  </p>

</div>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title" align="center">
      <%= reservation.start_time.strftime("%B %e, %Y at %l:%M %p")%>
    </h5>
    <p class="card-text">
      <ul style="list-style-type: none">
        <li><strong>Start Time:</strong> <%= reservation.start_time.strftime("%l:%M %p")%></li>
        <li><strong>End Time:</strong> <%= reservation.end_time.strftime("%l:%M %p")%></li>
        <li><strong>Number of Guests:</strong> <%= reservation.number_guests%></li>
        <li><strong>Content Choice:</strong> <%= reservation.content_choice%></li>
      </ul>
    </p>
    <div class="d-grid gap-2">
      <%= link_to "Update Reservation", edit_reservation_path(reservation), class: "btn btn-primary"%>
    </div>
  </div>
</div>
